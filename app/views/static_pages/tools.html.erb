<%= javascript_tag do %>
function disp(){
  alert("hello");
}

var app = angular.module('myApp', []);

app.controller('MainCtrl', function($scope) {
  $scope.name = 'hokkaido';
  $scope.now = new Date();
  $scope.searchText = 'yamada';

  $scope.names = [
      'Kazuhito Hokamura',
      'Takeshi Takatsudo',
      'Akihiro Oyamada',
      'Kazunori Tokuda',
      'Yukihisa Yamada',
    ];

  $scope.onClickBtn = function(){
    //文字列を反対にする
    $scope.name = $scope.name.split('').reverse().join('');

  };

});

app.controller('ProgressCtrl', function($scope) {
  $scope.onClickBtn = function(){
    if($scope.progress == 100){
        return
        
    }
    $scope.progress = Number($scope.progress) + 10;
  };

  $scope.onClickDelete = function(){
    $scope.progress = 0;
  };
});

app.filter('reverse', function() {
  return function(input) {
    // 入力が文字列じゃなかったら空文字を返す
    if (typeof input !== 'string') {
      return '';
    }

    // 入力文字列を逆にして返す
    return input.split('').reverse().join('');
  };
});

app.filter('truncate', function() {
  return function(input, length, suffix) {
    // デフォルトでは10文字で切る
    if (length === undefined) {
      length = 10;
    }

    // デフォルトの末尾文字は`...`
    if (suffix === undefined) {
      suffix = '...';
    }

    // 入力文字列が`length`より短かったらそのまま入力を返す
    if (input.length <= length) {
      return input;
    }

    // `length`の長さで切って末尾文字くっつけて返す
    return input.substring(0, length) + suffix;
  };
});

app.controller('FirstCtrl', function($scope) {
});

app.controller('SecondCtrl', function($scope) {
});

<% end %>


